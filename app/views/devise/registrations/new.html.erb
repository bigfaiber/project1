<style>
    .required:after { content:" *"; color:red }
</style>
<div class ='container'>
<h2>Sign up</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group col-md-4">
    <%= f.text_field :name, autofocus: true, required:  true, placeholder: 'Add name', autocomplete: "name" %>
  </div>

  <div class="field col-md-4">
    <%= f.text_field :last_name, autofocus: true, required:  true, autocomplete: "last name" %>
  </div>

  <div class="field col-md-4">
    <%= f.text_field :phone, autofocus: true, required:  true, autocomplete: "name" %>
  </div>

  <div class="field col-md-4">
    <%= f.email_field :email, autofocus: true, required:  true, autocomplete: "email" %>
  </div>

  <div class="field col-md-4">
    <%= f.password_field :password,  required:  true, placeholder: '6 chars minimum', autocomplete: "new-password" %>
  </div>

  <div class="form-group col-md-4">
    <%= f.password_field :password_confirmation, required:  true, autocomplete: "new-password" %>
  </div>
<br />
  <div class="form-group col-md-4">

    <%= f.select(:role, options_for_select(['Cliente', 'Trabajador']), { prompt: 'Select type', label: 'Soy un (tipo de usuario)', required: true}, {id: 'user_type', class: "form-control"}) %>
        <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
        Escoja tipo de usuario
      </div> 
  </div> 

  <div class="form-group col-md-4">

    <%= f.select(:HRO_id, options_for_select(Hro.all.map{|h| [h.name, h.id]}), {prompt: 'Select HRO', label: 'Soy cliente de:', required: true}, {id: 'client_of', disabled: true, class: "form-control"}) %>
        <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
        Escoja HRO
      </div> 
  </div> 

  <div class="actions col-md-4 text-center">

    <%= f.submit "Sign up" %>

  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

<script>
var a = document.getElementById('user_type');
var c = document.getElementById('client_of');
a.addEventListener('change', function() {
  if (a.value == 'Cliente'){
    c.disabled = false;
  }else{
    c.disabled = true;
  }
}, false);
</script>