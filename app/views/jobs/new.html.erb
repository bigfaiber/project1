      <div class="row">

  <nav class="col-md-2 d-none d-md-block bg-light sidebar">
    <div class="sidebar-sticky">
      <ul class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link" href='<%=user_path(current_user.id)%>'>
            <span data-feather="home"></span>
            Dashboard <span class="sr-only">(current)</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= user_job_apps_path(current_user.id) %>">
            <span data-feather="file"></span>
            Job Apps
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="<%= user_jobs_path(current_user.id)%>">
            <span data-feather="folder"></span>
            Jobs
          </a>
        </li>
        <% if hro_logged_in? %>
          <li class="nav-item">
            <a class="nav-link" href="#">
              <span data-feather="users"></span>
              Customers
            </a>
          </li>
        <%end%>
        <li class="nav-item">
          <a class="nav-link" href="#">
            <span data-feather="bar-chart-2"></span>
            Reports
          </a>
        </li>
      </ul>
    </div>
  </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
         
          <div class = 'container col-sm-6'>
            <%= bootstrap_form_for [@user, @job] do |f| %>
              <%= f.text_field :position, required: true %>
              <%= f.text_area :description %>
              <%= f.text_area :requirements, required: true %>
              <div class = 'd-flex flex-row wrap justify-content-between'>
              <%= f.number_field :salary, prepend: "$" %>
              <%= f.number_field :quantity, required: true %>
              </div>
              <%=f.datetime_select :start_datetime, required: true, class: "form-control"%>
              <%=f.datetime_select :end_datetime, required: true, class: "form-control"%>

              <%= f.submit "Create Job" %>
            <% end %>
            </div>
          </main>
    </div>


